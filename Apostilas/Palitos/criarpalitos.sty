\tikzset{
  match/.style = {
    cylinder,
    shape aspect = 1.2,
    cylinder uses custom fill,
    cylinder body fill=yellow,
    cylinder end fill = red,
    inner sep = 0pt,
    minimum width = 0mm,
    draw = black!20!yellow,
    sloped, midway,
    drop shadow={
     shadow yshift=-.7mm, shadow xshift=.5mm, opacity=.4},
   }
}

\def\match#1#2{
\path let
    \p1=(#2),
    \n1={0.65*veclen(\p1)}
    in (#1) -- +(#2)
    node[match,minimum height=\n1] {\phantom{x}};
}

\def\sumsign#1#2#3{
  \begin{scope}[shift={(#1)}]
    \node[match,minimum height=0.8*#3,rotate=#2] {};
  \end{scope}
}

\newcommand{\stick}[2]{
  \begin{scope}[shift={(#1)}]
    \filldraw[fill=yellow, draw=black!20!yellow] (0,0) rectangle (0.15,#2);
  \end{scope}
}

